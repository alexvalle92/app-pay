<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXamarin.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Hello! Make your Payment using paypal." HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Value" FontSize="Title" Padding="30,10,0,10"/>
        <Entry Margin="30,0,30,10" x:Name="valuePay" Placeholder="12.90" />
        <Button Text="Pay Now" Background="#2196F3" TextColor="White" VerticalOptions="EndAndExpand" Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>
